a=float(input("Введите число, возводимое в степень=")) 
b = a
n=int(input("Введите целую степень="))
a = 1

if n>0 :
    while (n >= 1):
        a *= b
        n -= 1
    print("Ответ=", a)
elif (n<0) :
    while (-n > 0) :
        a *= b
        n -= -1
    a=1/a
    print("Ответ=", a)
elif n==0 :
    print("Ответ=",1)